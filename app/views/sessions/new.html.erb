<% provide(:title, "Вход") %>
<h1>Вход</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>

      <%= label_tag :email, "Е-мейл" %>
      <%= text_field_tag :email %>

      <%= label_tag :password, "Пароль" %>
      <%= password_field_tag :password %>

      <%= submit_tag "Войти", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Новый пользователь? <%= link_to "Зарегистрироваться!", signup_path %></p>
  </div>
</div>
